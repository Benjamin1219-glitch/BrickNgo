        <p>+91 96181 99232</p>
      </div>

      <div class="info-card">
        <i class="fas fa-envelope"></i>
        <h4>Email</h4>
        <p>info@brickngo.com</p>
      </div>

      <div class="info-card">
        <i class="fas fa-location-dot"></i>
        <h4>Office Address</h4>
        <p>Hyderabad, Telangana, India</p>
      </div>

      <div class="info-card">
        <i class="fab fa-whatsapp"></i>
        <h4>WhatsApp</h4>
        <p>
          <a href="https://wa.me/918019447598"
             target="_blank"
             style="color:#1766d1;text-decoration:none;">
             Chat Now
          </a>
        </p>
      </div>
    </div>
  </section>

  <script>
